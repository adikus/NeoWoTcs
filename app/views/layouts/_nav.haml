%nav.navbar.navbar-default{role: 'navigation'}
	.container
		.navbar-header
			.nav-left-filler
			= link_to root_path, class: 'navbar-brand' do
				= image_tag 'logo-nav.png', alt: 'Main logo'
			%button.navbar-toggle{data:{toggle: 'collapse', target: '#main_nav_collapse'}}
				%span.icon-bar
				%span.icon-bar
				%span.icon-bar

		.navbar-menu
			.nav-search
				%form#nav_search_form.navbar-form.navbar-left{role: 'search', action: search_path, method: 'get'}
					= render 'partials/region_dropdown', class_name: 'navbar-left'
					.form-group
						= text_field_tag :search, params[:search] || '', placeholder: 'Search', class: 'form-control input-sm', id: 'nav_search'
					= hidden_field_tag :region, current_region, id: 'nav_region'
					%button.btn
						%i.glyphicon.glyphicon-search.icon-white
			#main_nav_collapse.navbar-collapse.collapse
				%ul.nav.navbar-nav
					%li{class: nav_item == :clans ? 'active' : ''}
						= link_to 'Clans', clans_path
					%li{class: nav_item == :api ? 'active' : ''}
						= link_to 'API', '#'
